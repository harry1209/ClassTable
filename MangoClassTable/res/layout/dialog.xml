<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/back">
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="课程名：" 
            />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp" 
            android:textSize="12dp"
            android:hint="键入课程信息，比如：数据结构">
            
        
        </EditText>

    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
         >
        <TextView
     android:id="@+id/textView6"
     android:layout_width="80dp"
     android:layout_height="40dp"
     android:text="星期：" />
       <RadioGroup 
         android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:checkedButton="@+id/radioButton_zhouyi"
     android:id="@+id/radiogroup3">
   
      <RadioButton
     android:id="@+id/radioButton_zhouyi"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_weight="1"
      android:textSize="18dp"
     android:text="一" />
        <RadioButton
     android:id="@+id/radioButton_zhouer"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_weight="1"
      android:textSize="18dp"
     android:text="二" />
          <RadioButton
     android:id="@+id/radioButton_zhousan"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_weight="1"
   android:textSize="18dp"
     android:text="三" />
            <RadioButton
     android:id="@+id/radioButton_zhousi"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_weight="1"
  android:textSize="18dp"
     android:text="四" />
           
              <RadioButton
     android:id="@+id/radioButton_zhouwu"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_weight="1"
     android:textSize="18dp"
     android:text="五" />
              
                <RadioButton
     android:id="@+id/radioButton_zhouliu"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_weight="1"
     android:textSize="18dp"
     android:text="六" />
                  <RadioButton
     android:id="@+id/radioButton_zhouri"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_weight="1"
      android:textSize="18dp"
     android:text="日" />
                  
    </RadioGroup>
    
        </LinearLayout>
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
         >
 <TextView
     android:id="@+id/textView2"
     android:layout_width="80dp"
     android:layout_height="40dp"
     android:text="上课时间：" />
<RadioGroup 
         android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:checkedButton="@+id/radioButton1"
    android:id="@+id/radiogroup1">
 <RadioButton
     android:id="@+id/radioButton1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_weight="1"
   android:textSize="18dp"
     android:text="8点" />

 <RadioButton
     android:id="@+id/radioButton2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_weight="1"
     android:textSize="18dp"
     android:text="10点" />
  <RadioButton
     android:id="@+id/radioButton3"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_weight="1"
      android:textSize="18dp"
     android:text="14点" />
   <RadioButton
     android:id="@+id/radioButton4"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_weight="1"
      android:textSize="18dp"
     android:text="16点" />
</RadioGroup>
 </LinearLayout>
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         >
 <TextView
     android:id="@+id/textView3"
     android:layout_width="80dp"
     android:layout_height="40dp"
     android:text="下课时间：" />
 <RadioGroup 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:checkedButton="@+id/radioButton5"
     android:id="@+id/radiogroup2"
     >
 <RadioButton
     android:id="@+id/radioButton5"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_weight="1"
    android:textSize="18dp"
     android:text="10点" />

 <RadioButton
     android:id="@+id/radioButton6"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_weight="1"
    android:textSize="18dp"
     android:text="12点" />
  <RadioButton
     android:id="@+id/radioButton7"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_weight="1"
     android:textSize="18dp"
     android:text="16点" />
   <RadioButton
     android:id="@+id/radioButton8"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_weight="1"
     android:textSize="18dp"
     android:text="18点" />
   </RadioGroup>
 </LinearLayout>
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         >
 <TextView
     android:id="@+id/textView4"
     android:layout_width="80dp"
     android:layout_height="40dp"
     android:text="教室：" />
    <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp" 
            android:textSize="12dp"
            android:hint="键入教室信息，比如：软件楼223">
            </EditText>
 </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         >
     <TextView
     android:id="@+id/textView6"
     android:layout_width="80dp"
     android:layout_height="40dp"
     android:text="任课老师："    
     />

     <EditText
         android:id="@+id/editText_tname"
         android:layout_width="wrap_content"
         android:layout_height="40dp"
         android:layout_weight="1"
         android:ems="5" />
     
     <TextView
     android:id="@+id/textView7"
     android:layout_width="80dp"
     android:layout_height="40dp"
     android:text="老师电话："    
     />

     <EditText
         android:id="@+id/editText_tphone"
         android:layout_width="wrap_content"
         android:layout_height="40dp"
         android:layout_weight="1"
         android:ems="5"
         android:inputType="number" />


    </LinearLayout>
  <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         >
 <TextView
     android:id="@+id/textView5"
     android:layout_width="80dp"
     android:layout_height="40dp"
     android:text="备忘：" 
     
     />
 <EditText 
     android:id="@+id/editText3"
     android:layout_width="200dp"
     android:layout_height="120dp"
      android:layout_marginLeft="20dp" 
      android:textSize="12dp"
      android:hint="上次老师有没有布置作业呢，有啊，没啊"
     />
 </LinearLayout>

  <Button
      android:id="@+id/button1"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="添加" />

</LinearLayout>